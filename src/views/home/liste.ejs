<html lang="fr">

<%- include('../partials/head', { title: 'Liste des jeux' }) %>

<body>
    
    <%- include('../partials/navbar') %>
	
	<div class="container">

		<h1 class="title">Liste des jeux en ligne</h1>

		<div class="searcher">
			
			<div class="search-checkbox">
				<span>
					<input type="checkbox" class="hidden" id="cb">
					<label for="cb">Cycle 1 (Maternelle)</label>
				</span>
				<span>
					<input type="checkbox" class="hidden" id="cb2">
					<label for="cb2">Cycle 2 (CP - CE2)</label>
				</span>
				<span>
					<input type="checkbox" class="hidden" id="cb3">
					<label for="cb3">Cycle 3 (CM1 - 6e)</label>
				</span>
				<span>
					<input type="checkbox" class="hidden" id="cb4">
					<label for="cb4">Cycle 4 (5e - 3e)</label>
				</span>
			</div>

			<input type="search" id="search-name" class="search-input" placeholder="Recherche par mot-clÃ©..">

		</div>

		<div class="cards">
			<% jeux.forEach((jeu) => { %>
				<div class="card">

					<div class="name"><%= jeu.name %></div>

					<label class="cycle">Cycle <%= jeu.cycle %></label>
					
					<img src="/images/<%= jeu.thumbnail %>" alt="<%= jeu.name %>" width="25%">

					<span class="tags"><%= jeu.tags.join(", ") %></span>

					<a href="/play/<%= jeu.id %>"><button>Jouer</button></a>
				</div>
			<%})%>
		</div>

		<script src="/js/autocomplete.js"></script>

	</div>

	<%- include('../partials/footer') %>

</body>

</html>